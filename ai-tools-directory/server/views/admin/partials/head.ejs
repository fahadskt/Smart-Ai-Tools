<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
<style>
    :root {
        --primary-bg: #1a1c23;
        --secondary-bg: #242731;
        --accent-color: #6c5dd3;
        --text-primary: #e4e6ea;
        --text-secondary: #a1a5b7;
        --card-bg: #2d303a;
        --hover-bg: #32364a;
        --border-color: #3f4253;
    }

    body {
        background-color: var(--primary-bg);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
        transition: all 0.3s ease;
        overflow-x: hidden;
        width: 100%;
    }

    .sidebar {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 60px 0 0;
        background: var(--secondary-bg);
        border-right: 1px solid var(--border-color);
        transition: all 0.3s ease;
        width: 250px;
    }

    .sidebar-sticky {
        position: relative;
        top: 0;
        height: calc(100vh - 60px);
        padding-top: .5rem;
        overflow-x: hidden;
        overflow-y: auto;
    }

    .navbar {
        background: var(--secondary-bg) !important;
        border-bottom: 1px solid var(--border-color);
        height: 60px;
    }

    .navbar-brand {
        color: var(--text-primary) !important;
        font-weight: 600;
        font-size: 1.2rem;
    }

    .nav-link {
        color: var(--text-secondary);
        padding: 12px 20px;
        margin: 4px 16px;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .nav-link:hover {
        background: var(--hover-bg);
        color: var(--text-primary);
        transform: translateX(5px);
    }

    .nav-link.active {
        background: var(--accent-color);
        color: white;
    }

    .nav-link i {
        font-size: 1.2rem;
    }

    .content {
        margin-left: 250px;
        padding: 80px 20px 20px;
        width: calc(100% - 250px);
        position: relative;
        overflow-x: hidden;
    }

    @media (max-width: 768px) {
        .content {
            margin-left: 0;
            padding: 70px 10px 10px;
            width: 100%;
        }
        
        .sidebar {
            transform: translateX(-100%);
            width: 100%;
            max-width: 250px;
        }
        
        .sidebar.show {
            transform: translateX(0);
        }
    }

    .container-fluid {
        padding-left: 0;
        padding-right: 0;
        overflow-x: hidden;
    }

    .row {
        margin-left: 0;
        margin-right: 0;
        width: 100%;
    }

    .card {
        background: var(--card-bg);
        border: none;
        border-radius: 15px;
        transition: all 0.3s ease;
        margin-bottom: 15px;
        width: 100%;
    }

    .stat-card {
        min-height: 120px;
    }

    .stat-icon {
        position: absolute;
        right: 15px;
        top: 15px;
        font-size: 1.8rem;
        opacity: 0.2;
    }

    .display-4 {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 0;
    }

    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        margin: 0;
        padding: 0;
        width: 100%;
    }

    .table {
        margin-bottom: 0;
        white-space: nowrap;
    }

    .card-body {
        padding: 15px;
    }

    .card-title {
        color: var(--text-secondary);
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
    }

    /* Responsive Typography */
    @media (max-width: 576px) {
        .display-4 {
            font-size: 1.75rem;
        }
        .h2 {
            font-size: 1.25rem;
        }
        .card-title {
            font-size: 0.75rem;
        }
        .table {
            font-size: 0.85rem;
        }
    }

    /* Avatar Circle */
    .avatar-circle {
        width: 40px;
        height: 40px;
        background: var(--accent-color);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
    }

    /* Badge Styles */
    .badge {
        padding: 0.5em 0.8em;
        font-weight: 600;
    }

    /* List Group */
    .list-group-item {
        background-color: transparent;
        border-color: var(--border-color);
        color: var(--text-secondary);
        padding: 1rem 1.5rem;
        transition: all 0.3s ease;
    }

    .list-group-item:hover {
        background-color: var(--hover-bg);
        color: var(--text-primary);
    }

    .list-group-item.active {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
        color: white;
    }

    /* Form Controls */
    .form-control, .form-select {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        color: var(--text-primary);
    }

    .form-control:focus, .form-select:focus {
        background-color: var(--card-bg);
        border-color: var(--accent-color);
        color: var(--text-primary);
        box-shadow: 0 0 0 0.25rem rgba(108, 93, 211, 0.25);
    }

    /* Table Styles */
    .table {
        color: var(--text-primary);
    }

    .table thead th {
        border-bottom-color: var(--border-color);
        color: var(--text-secondary);
        text-transform: uppercase;
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .table td {
        border-bottom-color: var(--border-color);
        vertical-align: middle;
    }

    /* Custom Scrollbar */
    ::-webkit-scrollbar {
        width: 6px;
    }

    ::-webkit-scrollbar-track {
        background: var(--secondary-bg);
    }

    ::-webkit-scrollbar-thumb {
        background: var(--border-color);
        border-radius: 3px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: var(--accent-color);
    }

    /* Animations */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
