<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Dashboard - Admin Portal</title>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('./partials/sidebar.ejs', { active: 'dashboard' }) %>

            <main class="content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                    <h1 class="h2">Dashboard Overview</h1>
                </div>

                <% if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <div class="row">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body position-relative">
                                <h5 class="card-title">Total Users</h5>
                                <p class="card-text display-4"><%= stats.totalUsers %></p>
                                <i class="bi bi-people-fill stat-icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body position-relative">
                                <h5 class="card-title">Total Tools</h5>
                                <p class="card-text display-4"><%= stats.totalTools %></p>
                                <i class="bi bi-tools stat-icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body position-relative">
                                <h5 class="card-title">Total Reviews</h5>
                                <p class="card-text display-4"><%= stats.totalReviews %></p>
                                <i class="bi bi-star-fill stat-icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body position-relative">
                                <h5 class="card-title">Total Prompts</h5>
                                <p class="card-text display-4"><%= stats.totalPrompts %></p>
                                <i class="bi bi-chat-square-text-fill stat-icon"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Recent Activity</h5>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Type</th>
                                                <th>Details</th>
                                                <th>Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% recentActivity.users.forEach(user => { %>
                                                <tr>
                                                    <td><i class="bi bi-person-plus text-success"></i> New User</td>
                                                    <td><%= user.username %></td>
                                                    <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                                </tr>
                                            <% }); %>
                                            
                                            <% recentActivity.tools.forEach(tool => { %>
                                                <tr>
                                                    <td><i class="bi bi-tools text-primary"></i> New Tool</td>
                                                    <td><%= tool.name %></td>
                                                    <td><%= new Date(tool.createdAt).toLocaleDateString() %></td>
                                                </tr>
                                            <% }); %>

                                            <% recentActivity.prompts.forEach(prompt => { %>
                                                <tr>
                                                    <td><i class="bi bi-chat-text text-info"></i> New Prompt</td>
                                                    <td><%= prompt.title %></td>
                                                    <td><%= new Date(prompt.createdAt).toLocaleDateString() %></td>
                                                </tr>
                                            <% }); %>

                                            <% recentActivity.notifications.forEach(notification => { %>
                                                <tr>
                                                    <td><i class="bi bi-bell text-warning"></i> Notification</td>
                                                    <td><%= notification.message %></td>
                                                    <td><%= new Date(notification.createdAt).toLocaleDateString() %></td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">System Health</h5>
                                <div class="mb-4">
                                    <label class="form-label d-flex justify-content-between">
                                        Database Status
                                        <span class="text-success">Connected</span>
                                    </label>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 100%"></div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label d-flex justify-content-between">
                                        API Health
                                        <span class="text-success">100%</span>
                                    </label>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 100%"></div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label d-flex justify-content-between">
                                        Server Load
                                        <span class="text-success">Normal</span>
                                    </label>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 35%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
