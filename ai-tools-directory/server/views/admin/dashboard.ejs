<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Dashboard - Admin Portal</title>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('./partials/sidebar.ejs', { active: 'dashboard' }) %>

            <main class="content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                    <h1 class="h2">Dashboard Overview</h1>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body position-relative">
                                <h5 class="card-title">Total Users</h5>
                                <p class="card-text display-4">1,234</p>
                                <i class="bi bi-people-fill stat-icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body position-relative">
                                <h5 class="card-title">Active Sessions</h5>
                                <p class="card-text display-4">856</p>
                                <i class="bi bi-activity stat-icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body position-relative">
                                <h5 class="card-title">System Status</h5>
                                <p class="card-text display-4">
                                    <span class="text-success">
                                        <i class="bi bi-check-circle-fill"></i>
                                    </span>
                                </p>
                                <i class="bi bi-hdd-rack-fill stat-icon"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="row mt-4">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Recent Activity</h5>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>User</th>
                                                <th>Action</th>
                                                <th>Time</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-circle me-2">JD</div>
                                                        <div>John Doe</div>
                                                    </div>
                                                </td>
                                                <td>Updated profile settings</td>
                                                <td>5 mins ago</td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-circle me-2">AS</div>
                                                        <div>Alice Smith</div>
                                                    </div>
                                                </td>
                                                <td>Created new project</td>
                                                <td>15 mins ago</td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-circle me-2">RJ</div>
                                                        <div>Robert Johnson</div>
                                                    </div>
                                                </td>
                                                <td>Logged in</td>
                                                <td>1 hour ago</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">System Health</h5>
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>CPU Usage</span>
                                        <span>65%</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" style="width: 65%"></div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Memory Usage</span>
                                        <span>45%</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" style="width: 45%"></div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Storage</span>
                                        <span>82%</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" style="width: 82%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
